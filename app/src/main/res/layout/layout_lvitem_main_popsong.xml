<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <com.haha.zy.widget.ListItemRelativeLayout
        android:id="@+id/itemBG"
        android:layout_width="match_parent"
        android:layout_height="@dimen/songitem_height"
        android:clickable="true">

        <TextView
            android:id="@+id/songIndex"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="10dp"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="000"
            android:textColor="#000"
            android:textSize="15dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/singPic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/singer_def"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            app:riv_border_color="@android:color/transparent"
            app:riv_border_width="1dp"
            app:riv_oval="true" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/download"
            android:layout_toRightOf="@+id/songIndex"
            android:orientation="vertical">


            <TextView
                android:id="@+id/songName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="歌曲名称"
                android:textColor="#000"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/islocal"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ald"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/singerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="歌手名称"
                    android:textColor="@color/def_bar_title_color"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/unlike"
            android:background="@mipmap/bxk" />

        <ImageView
            android:id="@+id/downloaded"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/unlike"
            android:background="@mipmap/akn"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/unlike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/delete"
            android:background="@drawable/ic_unlike_dark" />


        <ImageView
            android:id="@+id/liked"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/delete"
            android:background="@drawable/ic_like_dark"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/delete"
            android:background="@drawable/ic_delete_dark" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dip"
            android:background="@drawable/divider"
            android:layout_alignLeft="@+id/content"
            android:layout_alignParentBottom="true" />
    </com.haha.zy.widget.ListItemRelativeLayout>

</LinearLayout>
